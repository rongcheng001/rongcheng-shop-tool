{
  "name": "rongcheng-shop-multi-tool",
  "version": "1.0.0",
  "description": "荣诚商家后台多开工具 - 支持美团/饿了么等9大平台门店批量管理",
  "main": "main.js",
  "author": "荣诚科技",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build:win": "electron-builder --win --x64",
    "build:mac": "electron-builder --mac --x64 --arm64",
    "build:all": "electron-builder --win --mac --x64 --arm64",
    "pack:mac": "electron-builder --mac --dir",
    "clean": "rm -rf dist && rm -rf node_modules/.cache"
  },
  "electronDownload": {
    "mirror": "https://npmmirror.com/mirrors/electron/",
    "platform": "darwin",
    "arch": ["x64", "arm64"]
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "axios": "^1.6.8",
    "crypto-js": "^4.2.0",
    "@supabase/supabase-js": "^2.0.0",
    "exceljs": "^4.4.0",
    "joi": "^17.13.3", 
    "uuid": "^9.0.1",
    "electron-window-state": "^5.0.3"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3",
    "asar": "^3.2.0",
    "electron-reloader": "^1.2.3"
  },
  "build": {
    "appId": "com.rongcheng.shopmulti",
    "productName": "荣诚商家多开工具",
    "publish": null, 
    "copyright": "Copyright © 2025 ${author}",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "asar": true,
    "compression": "maximum",
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "gatekeeperAssess": false,
      "category": "public.app-category.business"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "highestAvailable"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "license": "LICENSE.txt",
      "artifactName": "${productName}-${version}-${arch}-setup.exe"
    }
  }
}
